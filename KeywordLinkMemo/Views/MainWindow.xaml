<Window x:Class="KeywordLinkMemo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="600" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="グループ">
                <MenuItem Header="新規作成" Click="MenuItem_Click"/>
                <Separator />
                <MenuItem Header="削除" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="項目">
                <MenuItem Header="開いている項目を編集" />
                <Separator />
                <MenuItem Header="新規作成" />
                <Separator />
                <MenuItem Header="削除" />
            </MenuItem>
        </Menu>

        <TreeView DockPanel.Dock="Left" x:Name="MemoGroupsTreeView" ItemsSource="{Binding MemoGroups}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="local:Models.MemoGroup"
                                  ItemsSource="{Binding MemoNames}">
                    <TextBlock Text="{Binding Name}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
    </DockPanel>
</Window>
